@model IEnumerable<DemoKhaled.BL.Models.deptVm>
<h1>Department</h1>

<a type="submit" asp-controller="Department" asp-action="create" class="btn btn-info">create new department</a>
<table class="table">

    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Code</th>
        <th>details</th>
        <th>Update</th>
        <th>Delete</th>

    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Id</td>
    <td>@item.Name</td>
    <td>@item.code</td>
    <td><a class="btn btn-info" asp-controller="Department" asp-action="detailes" asp-route-id="@item.Id">Details</a></td>
    <td><a class="btn btn-info" asp-controller="Department" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
    <td><a class="btn btn-info" asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
</tr>

    }
</table>