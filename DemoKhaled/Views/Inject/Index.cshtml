
@inject DemoKhaled.BL.interfaces.Idepartment Department
@inject DemoKhaled.BL.interfaces.IEmployeeRep Employee

@{
    ViewData["Title"] = "Index";
}

<h2>Inject View</h2>

<h4>Employees</h4>
<table border="1" class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>

    </tr>

    @foreach (var item in Employee.get())
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Emial</td>

        </tr>

    }



</table>


<select>
    <option>Choose Department</option>
    @foreach (var item in Department.get())
    {
        <option name="@item.Id">@item.Name</option>
    }
</select>

@section selectBootstrab{
    <script src="~/plugins/bootstrap-select/js/bootstrap-select.js"></script>
    
}

