@model List<DemoKhaled.BL.Models.UserInRoleVm>

@{
    ViewData["Title"] = "Add Or Remove Users";
    var RoleId = ViewBag.RoleId;
}




<form method="post" class="form-group">
    method post allow to send not just an object to the post method

    <div class="card-header">
        <h2>Add Or Remove User In Role</h2>
    </div>


    @for (int i = 0; i < Model.Count; i++)
    {

        <input asp-for="@Model[i].IsSelected" type="checkbox" class="filled-in">
        <label asp-for="@Model[i].IsSelected">@Model[i].Name</label>

        <input type="hidden" asp-for="@Model[i].Id" />
        <input type="hidden" asp-for="@Model[i].Name" />

    }

    <div class="card-footer">
        <input type="submit" value="Edit" class="btn btn-primary" />
    </div>


</form>

<a asp-controller="Role" asp-action="Edit" asp-route-id="@RoleId">Cancle</a>

